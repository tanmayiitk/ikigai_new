              <% var i=1; %>
              <% user.dsat.scores.forEach(function(score){ %>
              <div class="card col-lg-12 border-primary" style="padding: 0px 0px !important; margin-bottom: 10px;">
                    <div class="card-header text-primary " style="height: 48px;  ">
                      <h5><strong>DSAT <%=i%></strong> </h5><br>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-success"><strong>Your Score : <%= score %></strong></h5>
