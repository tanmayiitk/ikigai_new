<% include ../layout %>
<div class="container">
<div class="pb-2 mt-2 mb-4 border-bottom">
    <h3>Sign in</h3>
</div>
<form method="POST"><input type="hidden" name="_csrf" value="<%=_csrf %>"  />
    <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="email">Email</label>
        <div class="col-md-7"><input class="form-control" type="email" name="email" id="email" placeholder="Email" autofocus="autofocus" autocomplete="email" required="required" /></div>
    </div>
    <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="password">Password</label>
        <div class="col-md-7"> <input class="form-control" type="password" name="password" id="password" placeholder="Password" autocomplete="current-password" required="required" /></div>
    </div>
    <div class="form-group">
        <div class="offset-md-3 col-md-7 pl-2"><button class="col-md-3 btn btn-primary" type="submit"><i class="far fa-user fa-sm"></i>Login</button><a class="btn btn-link" href="/forgot">Forgot your password?</a></div>
    </div>
    <div class="form-group">
        <div class="offset-md-3 col-md-7 pl-2">
            <hr>
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-3 col-md-7 pl-2">
            <a class="btn btn-block btn-snapchat btn-social" href="/auth/snapchat"><i class="fab fa-snapchat-ghost fa-sm"></i>Sign in with Snapchat</a>
            <a class="btn btn-block btn-facebook btn-social" href="/auth/facebook"><i class="fab fa-facebook-f fa-sm"></i>Sign in with Facebook</a>
            <a class="btn btn-block btn-twitter btn-social" href="/auth/twitter"><i class="fab fa-twitter fa-sm"></i>Sign in with Twitter</a>
            <a class="btn btn-block btn-google btn-social" href="/auth/google"><i class="fab fa-google-plus-g fa-xs"></i>Sign in with Google</a>
            <a class="btn btn-block btn-github btn-social" href="/auth/github"><i class="fab fa-github fa-sm"></i>Sign in with GitHub</a>
            <a class="btn btn-block btn-linkedin btn-social" href="/auth/linkedin"><i class="fab fa-linkedin-in fa-sm"></i>Sign in with LinkedIn</a>
            <a class="btn btn-block btn-instagram btn-social" href="/auth/instagram"><i class="fab fa-instagram fa-sm"></i>Sign in with Instagram</a></div>
    </div>
</form>
</div>