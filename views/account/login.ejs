<% include ../header %>

<div class="container" style="margin-top: 140px;" >
<div class="pb-2 mt-2 mb-4 border-bottom">
    <h3>Sign in</h3>
</div>
 <div class="container">
      <% include ../partials/flash %>
  </div> 
<form method="POST"><input type="hidden" name="_csrf" value="<%=_csrf %>"  />
    <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="email">Email</label>
        <div class="col-md-7"><input class="form-control" type="email" name="email" id="email" placeholder="Email" autofocus="autofocus" autocomplete="email" required="required" /></div>
    </div>
    <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-right" for="password">Password</label>
        <div class="col-md-7"> <input class="form-control" type="password" name="password" id="password" placeholder="Password" autocomplete="current-password" required="required" /></div>
    </div>
    <div class="form-group">
        <div class="offset-md-3 col-md-7 pl-2"><button class="col-md-3 btn btn-primary" type="submit"><i class="far fa-user fa-sm" style="padding-right: 15px;"></i>Login</button>
            <a class="btn btn-link" href="/forgot">Forgot your password?</a>
            <a class="btn btn-link" href="/signup">Create New Account</a>
    </div>
        </div>
    
   

    
    <div class="form-group">
        <div class="offset-md-3 col-md-7 pl-2">
            <hr>
        </div>
    </div>
    <div class="form-group ">
        <div class="offset-md-3 col-md-7 pl-2 auth-btn" >
            <a class="btn btn-primary "  href="/auth/facebook" role="button" style="background-color: #3b5998; margin: 0 auto; width: auto;" ><i class="fab fa-facebook-f" style="padding-right: 20px;"></i>Sign In with Facebook </a><br><br>
            <a class="btn btn-primary" href="/auth/google" role="button" style="background-color: #DB4437; margin: 0 auto; width: auto" ><i class="fab fa-google-plus-g " style="padding-right: 20px;"></i>Sign In with Google </a>
    </div>
</div>
</form>
</div>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '267329357547138',
      xfbml      : true,
      version    : 'v3.2'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
