<div class="navbar navbar-light fixed-top navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand" href="/"><i class="fas fa-cube"></i>Project name</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item <%=(title === 'Home') ? 'active' : undefined %>"><a class="nav-link" href="/api">API Examples</a></li>
                <li class="nav-item <%= (title === 'API Examples') ? 'active' : undefined %>"><a class="nav-link" href="/contact">Contact</a></li>
                <li class="nav-item <%= (title === 'Contact') ? 'active' : undefined %>"><a class="nav-link" href="/status">Status</a></li>
            </ul>
            <% if(!user){ %>
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item <%= (title === 'Login') ? 'active' : undefined %>"><a class="nav-link" href="/login">Login</a></li>
                <li class="nav-item <%= (title === 'Login') ? 'active' : undefined %>"><a class="nav-link" href="/signup">Create Account</a></li>
                <% } else { %>
                <li class="dropdown  nav-item <%= (title === 'Account Management') ? 'active' : undefined %>">
                    <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown">
                        <% if(user.profile.picture){%>
                        <img src="<%=user.profile.picture%>"/>
                        <% } else { %>
                        <img src="<%= user.gravatar(60) %>"/>
                        <% } %>
                        <span> "<%= user.profile.name || user.email || user.id %>" </span>
                        <i class="caret"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-item"><a href="/account">My Account</a></li>
                        <li class="divider dropdown-item"></li>
                        <li class="dropdown-item"><a href="/logout">Logout</a></li>
                    </ul>
                </li>
                <% } %>
            </ul>
    </div>
</div>
</div>